datasource db {
  provider = "mysql" 
  url      = "mysql://USER:PASSWORD@HOST:PORT/DATABASE"  
}

model User {
  Sport   		String    @id @default(autoincrement())
  Team Name    		String 
  Location (City)    	String
  Total Points Scored 	Int
  Number of Wins 	Int
  posts   Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}
